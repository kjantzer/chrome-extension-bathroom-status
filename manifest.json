{
	"name": "Bathroom Status",
    "description" : "Display the open/closed status of the bathrooms doors",
	"version": "1.0.0",
	"icons": {
		"32": "icons/32x32.png",
		"64": "icons/64x64.png",
	    "96": "icons/96x96.png",
		"128": "icons/128x128.png"
	},
	"browser_action": {
		"default_icon": "icons/96x96.png",
		"default_title": "Bathroom Status",
		"default_popup": "dist/index.html"
	},
	"background": {
		"scripts": ["dist/background.js"]
	},
	"permissions": [
		"https://www.mytaglist.com/*"
	],
	"manifest_version": 2
}
